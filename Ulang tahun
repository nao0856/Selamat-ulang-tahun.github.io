<style>
  :root {
    --bg-color: #fafafa;
    --text-color: #333;
    --cake-bg: #bbb;
    --cake-hover-bg: #999;
  }
  body {
    margin:0;
    padding: 30px;
    background-color: var(--bg-color);
    color: var(--text-color);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
  }
  h1 {
    margin-bottom: 5px;
    letter-spacing: 0.1em;
  }
  #game-area {
    position: relative;
    margin-top: 40px;
    width: 280px;
    height: 280px;
    border: 2px solid var(--text-color);
    border-radius: 12px;
    background: #eee;
    overflow: hidden;
  }
  #cake {
    position: absolute;
    width: 80px;
    height: 80px;
    background-color: var(--cake-bg);
    border-radius: 15px;
    font-size: 50px;
    line-height: 80px;
    text-align: center;
    user-select: none;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.5s ease;
    top: 100px;
    left: 100px;
  }
  #cake:hover {
    background-color: var(--cake-hover-bg);
  }
  #info {
    margin-top: 30px;
    min-height: 60px;
    font-weight: 600;
    font-size: 1.2rem;
    text-align: center;
  }
  #restart-btn, #eat-cake-btn {
    margin-top: 20px;
    padding: 10px 20px;
    font-weight: 600;
    font-size: 1rem;
    border: 2px solid var(--text-color);
    border-radius: 10px;
    background: transparent;
    cursor: pointer;
    display: none;
    transition: background-color 0.3s, color 0.3s;
  }
  #restart-btn:hover, #eat-cake-btn:hover {
